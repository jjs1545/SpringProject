<script>
	function isNull(obj, msg) {
		if(obj.value == "") {
			alert(msg);
			obj.focus();
			return true;
		}
		return false;
	}
	function doCheck() {
		var wForm = document.writeForm;
		
		if(isNull(wForm.title, '제목을 작성해 주세요!')) {
			return false;
		}
		
		/* textarea 유효성 검사 */
		if(wForm.content.value.length == 0) {
			alert('내용을 입력해 주세요!');
			wForm.content.focus();
			return false;
		}
	}
</script>

</html>
